<?xml version="1.0" encoding="utf-8"?>
<scale xmlns:android="http://schemas.android.com/apk/res/android"
       android:drawable="@drawable/bg_oval_gradient_sweep"
       android:scaleGravity="center"
       android:scaleHeight="0%"
       android:scaleWidth="0%">

    <!-- scaleGravity:类似缩放原点 -->
    <!-- scaleHeight:高度缩小比例：50%表示缩小为原大小的50%,数字越大，图片越小 -->
    <!-- scaleWidth:宽度缩小比例：0%表示保持原大小不变 -->
    <!-- android:useIntrinsicSizeAsMinimum 设置drawable原有尺寸作为最小尺寸，设为true时，缩放基本无效，API Level最低要求为11 -->

</scale>