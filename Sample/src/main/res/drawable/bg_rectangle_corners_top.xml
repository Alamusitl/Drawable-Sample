<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">

    <solid android:color="@color/colorPrimary"/>

    <!-- 增加了内间距 -->
    <padding
        android:bottom="@dimen/shape_padding"
        android:left="@dimen/shape_padding"
        android:right="@dimen/shape_padding"
        android:top="@dimen/shape_padding"/>

    <!-- 设置圆角，适用于rectangle -->
    <corners
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp"
        android:radius="@dimen/shape_corners"
        android:topLeftRadius="@dimen/shape_corners"
        android:topRightRadius="@dimen/shape_corners"/>
</shape>